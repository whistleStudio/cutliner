{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "bin/svg2dxf",
          "sidecar": true,
          "args": [
            {
              "validator": "^.+\\.svg$"
            }, 
            {
              "validator": "^.+\\.dxf$"
            }
          ]
        }
      ]
    }
  ]
}