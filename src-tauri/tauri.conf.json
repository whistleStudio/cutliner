{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cutliner",
  "version": "0.1.0",
  "identifier": "com.whistle.cutliner",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Cutliner",
        "width": 1200,
        "height": 800,
        "resizable": false,
        "maximizable": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**" 
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "bin/*",
      "assets/*"
    ],
    "externalBin": [
      "bin/svg2dxf"
    ]
  }
}
